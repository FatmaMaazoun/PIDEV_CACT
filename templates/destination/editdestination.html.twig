                {{ form_row(form.image ) }}

         
       </div>
    
    
    </div>
   
    
    
      </div>
      
      <div class="modal-footer justify-content-between">
        <a type="button" href="{{path('read_destination')}}" class="btn btn-secondary ">Retour</a>
        {{ form_row(form.update , {attr: {class: 'btn btn-primary'}}) }}

      </div>
  </div>
  
  </div>
  </div>
 
  </section>
  
  </div>
