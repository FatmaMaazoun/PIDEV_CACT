  </div>
  <div class="modal-body">
          
    
        <div class="form-row">
          <div class="form-group col-md-4">
            {{ form_row(form.nom , {attr: {class: 'form-control',placeholder: 'Nom'}}) }}
          </div>
          <div class="form-group col-md-4">
            {{ form_row(form.email , {attr: {class: 'form-control',placeholder: 'email'}}) }}

          </div>
            <div class="form-group col-md-4">
                {{ form_row(form.num_tel , {attr: {class: 'form-control',placeholder: '71 171 717 '}}) }}

            </div>
            </div>
            
        <div class="form-row">
          <div class="form-group col-md-8">
            {{ form_row(form.description , {attr: {class: 'form-control',placeholder: 'bla bla bla bla bla..'}}) }}

          </div>
          <div class="form-group col-md-4">
            {{ form_row(form.souscategorie , {attr: {class: 'form-control',placeholder: '71 171 717 '}}) }}

          </div>
           </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              {{ form_row(form.adresse , {attr: {class: 'form-control',placeholder: '14,rue,aghle tamimi'}}) }}

