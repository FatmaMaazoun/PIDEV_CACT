{% extends'base.html.twig' %}
{% block body %}
    {{ form_start(form)}}
    <div class="content" style="width:1500px;height:900px;margin-left:300px;margin-top:1%;color:#17a2b8">
        <div class="card card-blue">
            <div class="card-header" >
                <h3 class="card-title">Modifier un utilisateur</h3>
            </div>
            <div class="modal-body">
                {{ form_row(form.login, {attr: {class: 'form-control '} }) }}
            <div class="form-group">
                {{ form_row(form.nom, {attr: {class: 'form-control '} }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.prenom, {attr: {class: 'form-control '} }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.date_naissance, {attr: {class: 'form-control '} }) }}
            </div>
            <div class="form-group">
                    {{ form_row(form.password, {attr: {class: 'form-control '}}) }}
            </div>
                <div class="form-group">
                    {{ form_row(form.role , {attr: {class: 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.email , {attr: {class: 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.num_tel , {attr: {class: 'form-control'}}) }}
                </div>
            </div>

            <div class="modal-footer justify-content-between">
                {{ form_row(form.enregistrer,{attr: {class: 'btn btn-success'}}) }}
                {{ form_end(form) }}
                <a type="button" href="{{path('listutilisateurs')}}" class="btn btn-primary ">Retour</a>
            </div>
        </div>

    </div>
    </div>

    </section>

    </div>
{% endblock %}