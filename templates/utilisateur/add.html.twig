{% extends 'base.html.twig' %}
{% block title %}Ajouter un utilisateur{% endblock %}
{% block body %}
    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Ajout d'un utilisateur  </title>
    <body class="hold-transition sidebar-mini">
        <div class="content-wrapper" >
            <section class="content" style="width:1500px;height:900px;margin-left:300px;margin-top:1%";>
                <div class="container-fluid">
                    <div class="row">

                        <div class="col-md-6">

                            <div class="card card-gray">
                                <div class="card-header">
                                    <h3 class="card-title">Ajouter un utilisateur</h3>
                                </div>

                                    <div class="card-body">
                                        <div class="form-group">
                                            {{ form_row(form.login,{attr: {class: 'form-control'}}) }}
                                        </div>
                                        <div class="form-group">
                                            {{ form_row(form.password,{attr: {class: 'form-control'}}) }}
                                        </div>
                                        <div class="form-group">
                                            {{ form_row(form.role,{attr: {class: 'form-control'}}) }}
                                        </div>
                                        <div class="form-group">
                                            {{ form_row(form.nom,{attr: {class: 'form-control'}}) }}
                                        </div>
                                        <div class="form-group">
                                            {{ form_row(form.prenom,{attr: {class: 'form-control'}}) }}
                                        </div>
                                        <div class="form-group">
                                            {{ form_row(form.date_naissance,{attr: {class: 'form-control'}}) }}
                                        </div>
                                        <div class="form-group">
                                            {{ form_row(form.email,{attr: {class: 'form-control'}}) }}
                                        </div>
                                        <div class="form-group">
                                            {{ form_row(form.num_tel,{attr: {class: 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="modal-footer justify-content-between">
                                        {{ form_row(form.enregistrer,{attr: {class: 'btn btn-primary'}}) }}
                                        {{ form_end(form) }}
                                        <a type="button" href="{{path('listutilisateurs')}}" class="btn btn-secondary ">Retour</a>
                                    </div>
                                        <div class="form-group">
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
            </section>
                        </div>
    <script src="../../plugins/jquery/jquery.min.js"></script>

    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="../../plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

    <script src="../../dist/js/adminlte.min.js?v=3.2.0"></script>

    <script src="../../dist/js/demo.js"></script>

    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
    </body>
    </html>
{% endblock %}